		int size = theList.size();
		logger.debug("deleteEmpties:before size = " + size);
		for (int i = 0; i < size; i++) {
			MenuItem mItem = theList.get(i);
			if (mItem.getName() != null && mItem.getName().length() > 0)
				mList.add(mItem);
		}
		return mList;
	}
	
