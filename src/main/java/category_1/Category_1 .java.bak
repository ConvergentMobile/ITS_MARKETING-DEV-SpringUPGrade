	private String arrayToString(String[] sa) {
		StringBuffer sb = new StringBuffer();
		for (String s : sa) 
			if (sb.length() <= 0)
					sb.append(s);
			else 
					sb.append(",").append(s);
		
		return sb.toString();
	}
	
